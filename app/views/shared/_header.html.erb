<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-sm border-b border-gray-100 mb-0" data-controller="mobile-menu">
  <div class="container mx-auto px-4 h-16 md:h-32 flex items-center justify-between">
    <%= link_to root_path, class: "text-2xl font-bold font-inter tracking-tight hover:opacity-70 transition-opacity text-[#808080] z-[60] relative" do %>
      TRiGGER
    <% end %>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex gap-8">
      <% unless current_page?(root_path) %>
        <%= link_to "TOP", root_path, class: "text-base font-normal text-gray-600 hover:text-black transition-colors" %>
      <% end %>
      <%= link_to "私について", about_path, class: "text-base font-medium text-gray-600 hover:text-black transition-colors" %>
      <%= link_to "できること", service_path, class: "text-base font-medium text-gray-600 hover:text-black transition-colors" %>
      <%= link_to "やってきたこと", works_path, class: "text-base font-medium text-gray-600 hover:text-black transition-colors" %>
    </nav>

    <!-- Mobile Menu Button -->
    <button data-action="click->mobile-menu#toggle" class="block md:hidden z-[60] relative p-2 text-black focus:outline-none">
      <!-- Hamburger Icon -->
      <svg data-mobile-menu-target="iconOpen" class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <!-- Close Icon -->
      <svg data-mobile-menu-target="iconClose" class="w-8 h-8 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu Dropdown -->
  <div data-mobile-menu-target="menu" class="hidden md:hidden absolute top-full right-0 w-full bg-white shadow-lg border-t border-gray-100 z-[55]">
    <nav class="flex flex-col py-4">
      <% unless current_page?(root_path) %>
        <%= link_to "TOP", root_path, class: "block px-6 py-3 text-lg font-normal text-gray-600 hover:bg-gray-50 hover:text-black transition-colors text-center", data: { action: "click->mobile-menu#close" } %>
      <% end %>
      <%= link_to "私について", about_path, class: "block px-6 py-3 text-lg font-medium text-gray-600 hover:bg-gray-50 hover:text-black transition-colors text-center", data: { action: "click->mobile-menu#close" } %>
      <%= link_to "できること", service_path, class: "block px-6 py-3 text-lg font-medium text-gray-600 hover:bg-gray-50 hover:text-black transition-colors text-center", data: { action: "click->mobile-menu#close" } %>
      <%= link_to "やってきたこと", works_path, class: "block px-6 py-3 text-lg font-medium text-gray-600 hover:bg-gray-50 hover:text-black transition-colors text-center", data: { action: "click->mobile-menu#close" } %>
    </nav>
  </div>
</header>
