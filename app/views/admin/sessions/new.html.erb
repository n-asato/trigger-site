<div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden mt-20">
  <div class="p-8">
    <h2 class="text-2xl font-bold mb-6 text-center">Admin Login</h2>
    
    <%= form_with url: admin_login_path do |f| %>
      <div class="mb-4">
        <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :username, class: "w-full border-gray-300 rounded-md focus:ring-black focus:border-black" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, class: "w-full border-gray-300 rounded-md focus:ring-black focus:border-black" %>
      </div>

      <%= f.submit "Login", class: "w-full bg-black text-white font-bold py-2 px-4 rounded hover:bg-gray-800 transition-colors cursor-pointer" %>
    <% end %>
  </div>
</div>
