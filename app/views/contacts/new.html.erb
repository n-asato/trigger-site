<div class="bg-gray-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-lg border border-gray-200 p-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">お問い合わせ</h2>

      <%= form_with model: @contact, url: contacts_path, local: true, class: "space-y-6" do |f| %>
        <% if @contact.errors.any? %>
          <div class="bg-red-50 p-4 rounded-md border border-red-200">
            <h3 class="text-sm font-medium text-red-800">入力内容にエラーがあります</h3>
            <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
              <% @contact.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%# Honeypot field - hidden from users, bots will fill it %>
        <div style="position: absolute; left: -9999px;">
          <%= f.label :website, "Website" %>
          <%= f.text_field :website, tabindex: "-1", autocomplete: "off" %>
        </div>

        <div>
          <%= f.label :company_name, "会社名", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :company_name, class: "contact-form-input mt-1 block w-full rounded-md focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <div>
          <%= f.label :name, "担当者名", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "contact-form-input mt-1 block w-full rounded-md focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <div>
          <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "contact-form-input mt-1 block w-full rounded-md focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <div>
          <%= f.label :subject, "件名", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :subject, class: "contact-form-input mt-1 block w-full rounded-md focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <div>
          <%= f.label :message, "ご相談内容", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :message, rows: 6, class: "contact-form-input mt-1 block w-full rounded-md focus:border-cyan-500 focus:ring-cyan-500" %>
        </div>

        <div>
          <%= f.submit "送信する", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md text-sm font-medium text-white bg-cyan-600 hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
